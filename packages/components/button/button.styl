$button-height = 42px
$box-shadow =1px 1px 3px $primary-color;
$no-box-shadow =  0px 0px 0px $font-base-colord

.xui__button{
    display: inline-block;
    line-height: 1;
    cursor: pointer;
    font-size: $font-size-normal
    color: $font-base-color6
    -webkit-appearance: none;
    // 设置盒模型
    box-sizing: border-box
    background:$default-bg
    border: 1px solid $font-base-colord
    border-image: initial;
    margin: 0px;
    border-radius: $border-radius;
    height: $button-height
    position: relative;
    outline: none
    font-family: $font-family-base
    font-weight:$font-weight-normal
    .xui__button-icon{
        position absolute;
        right 5px
    }
}
// type
.xui__button--plain{
    &:hover{
        border-color: $primary-color
        color $primary-color
        box-shadow:$box-shadow
    }
}
.xui__button--plain:disabled{
    &:hover{
        border-color: $font-base-colord!important
        color $font-base-color6!important
        box-shadow: $no-box-shadow!important
    }
}

.xui__button--primary{
    background $primary-color
    color $default-bg
    &:hover{
        box-shadow:$box-shadow
    }
}
.xui__button--primary:disabled{
    &:hover{
        border-color: $font-base-colord!important
        color $font-base-color6!important
        box-shadow: $no-box-shadow!important
    }
}

.xui__button--big{
    width: 330px
}
.xui__button--small{
    width: 80px
}
.xui__button--normal{
    width: 160px
}
.is-disabled{
    opacity 0.3
    cursor not-allowed
}
