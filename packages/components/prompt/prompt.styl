.xui__prompt--wrapper {
	overfllow: hidden;
	width: 100%;
	height: 110px;
	z-index: 1000;
	margin-bottom: 10px;

	.item {
		width: 304px;
		height: 78px;
		padding: 16px;
		background: #fff;
		border: 1px solid grey;
		border-radius: 2px;
		z-index: 1000;
		float: right;
		position: relative;
	}

	.title {
		font-size: $font-size-normal;
		color: $font-base-color3;
		font-weight: $font-weight-bold;
		margin-bottom: 4px;
	}

	.desc {
		font-size: $font-size-small;
		color: $font-base-color6;
	}

	.close {
		font-size: 20px;
		position: absolute;
		top: 0;
		right: 5px;
		cursor: pointer;
	}
}

.prompt-enter-active {
	animation: prompt-fade-in 0.3s;
}

.prompt-leave-active {
	animation: prompt-fade-out 0.3s;
}

@keyframes prompt-fade-in {
	0% {
		opacity: 0;
		transform: translateY(-20px);
	}

	100% {
		opacity: 1;
		transform: translateY(0px);
	}
}

@keyframes prompt-fade-out {
	0% {
		opacity: 1;
		transform: translateY(0px);
	}

	100% {
		opacity: 0;
		transform: translateY(-20px);
	}
}
