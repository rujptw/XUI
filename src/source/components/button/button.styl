.xui__button{
    display: inline-block;
    line-height: 1;
    cursor: pointer;
    font-size: 16px
    color: $font-common-color
    -webkit-appearance: none;
    // 设置盒模型
    box-sizing: border-box
    background:$default-bg
    border: 1px solid $font-common-color
    border-image: initial;
    margin: 0px;
    border-radius: $border-radius;
    padding: 7px 2px;
    position: relative; 
    outline: none  
}

.xui__button--default{
    @extend .xui__button
}
.xui__button--activate{
    border-color: $primary-color
    color: $primary-color
}